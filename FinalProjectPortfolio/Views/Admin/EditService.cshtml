@model FinalProjectPortfolio.Models.Service

@{
    ViewData["Title"] = "Edit Service";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">Edit Service</h1>
    </div>
    <a asp-action="ManageServices" class="btn btn-sm btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="EditService" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Service Image</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="~/uploads/services/@Model.ImageUrl" class="img-thumbnail mb-2" alt="Current Service Image" />
                            }
                            <input type="file" name="serviceImage" class="form-control" accept=".jpg,.jpeg,.png" />
                            <small class="text-muted">Upload a new image to replace the current one.</small>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
