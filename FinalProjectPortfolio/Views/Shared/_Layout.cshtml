@*
    My Main Layout File
    This file defines the overall structure of my website, including the header, navigation, and footer.
    It's the template that all my other pages will use.
*@
@using Microsoft.AspNetCore.Identity
@using FinalProjectPortfolio.Data
@using Microsoft.EntityFrameworkCore
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ApplicationDbContext Context

@{
    // I'm fetching my profile data here at the top so I can use it in both the <title> and the <nav> bar.
    var profile = await Context.Profiles.FirstOrDefaultAsync();
    string pageTitle = (profile != null && !string.IsNullOrEmpty(profile.Name))
        ? $"{profile.Name.Split(' ')[0]}'s Portfolio"
        : "My Portfolio";
    string navbarBrand = (profile != null && !string.IsNullOrEmpty(profile.Name))
        ? profile.Name.Split(' ')[0]
        : "Portfolio";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle</title>
    <link rel="icon" type="image/png" href="~/Joshua.png" />
    
    @* I'm using CDNs for Bootstrap and other libraries to keep my project light. *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProjectPortfolio.styles.css" asp-append-version="true" />

    <script>
        // I put this script here to prevent the "flash" of the wrong theme when the page loads.
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-bs-theme', savedTheme);
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-glass">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@navbarBrand</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav navbar-nav-centered">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="experience">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="contact">Contact</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                            </li>
                        }
                    </ul>
                    <button id="themeToggle" class="btn border-0 bg-transparent ms-auto p-2" type="button" aria-label="Toggle theme">
                        <i class="bi bi-moon-fill fs-5"></i>
                        <i class="bi bi-sun-fill fs-5"></i>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="flex-grow-1" style="padding-top: 60px;">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      // I'm initializing the Animate On Scroll library here for all pages.
      AOS.init({
          duration: 800,
          once: false
      });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
