@model FinalProjectPortfolio.Models.Skill

@{
    ViewData["Title"] = "Delete Skill";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">Delete Skill</h1>
    </div>
    <a asp-action="ManageSkills" class="btn btn-sm btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Are you sure you want to delete this?</h4>
        </div>
        <div class="card-body">
            <p class="text-muted">This action cannot be undone.</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Category)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-3">Icon</dt>
                <dd class="col-sm-9">
                    <i class="bi @Model.IconClass fs-4"></i>
                </dd>
            </dl>
            <form asp-action="DeleteSkill" class="text-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
