@model FinalProjectPortfolio.Models.Experience

@{
    ViewData["Title"] = "Delete Experience";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">Delete Experience</h1>
    </div>
    <a asp-action="ManageExperience" class="btn btn-sm btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Are you sure you want to delete this?</h4>
        </div>
        <div class="card-body">
            <p class="text-muted">This action cannot be undone.</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JobTitle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobTitle)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Company)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Company)</dd>
                
                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("MMM yyyy") - @(Model.EndDate?.ToString("MMM yyyy") ?? "Present")</dd>
            </dl>
            <form asp-action="DeleteExperience" class="text-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
