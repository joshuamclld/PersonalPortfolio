@model IEnumerable<FinalProjectPortfolio.Models.Experience>

@{
    ViewData["Title"] = "Manage Experience";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="display-6 mb-0">Manage Experience</h1>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
        <a asp-action="CreateExperience" class="btn btn-primary align-self-center">
            <i class="bi bi-plus-circle me-2"></i>Add New Experience
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.JobTitle)</th>
                        <th>@Html.DisplayNameFor(model => model.Company)</th>
                        <th>Duration</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.JobTitle)</td>
                        <td>@Html.DisplayFor(modelItem => item.Company)</td>
                        <td>
                            @item.StartDate.ToString("MMM yyyy") - @(item.EndDate?.ToString("MMM yyyy") ?? "Present")
                        </td>
                        <td class="text-end">
                            <a asp-action="EditExperience" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <a asp-action="DeleteExperience" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
