@model IEnumerable<FinalProjectPortfolio.Models.Service>

@{
    ViewData["Title"] = "Manage Services";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="display-6 mb-0">Manage Services</h1>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
        <a asp-action="CreateService" class="btn btn-primary align-self-center">
            <i class="bi bi-plus-circle me-2"></i>Add New Service
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="~/uploads/services/@item.ImageUrl" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="text-end">
                            <a asp-action="EditService" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <a asp-action="DeleteService" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
