@model FinalProjectPortfolio.Models.SocialLink

@{
    ViewData["Title"] = "Edit Social Link";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">Edit Social Link</h1>
    </div>
    <a asp-action="ManageSocialLinks" class="btn btn-sm btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="EditSocialLink">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Url" class="form-label"></label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IconClass" class="form-label">Icon</label>
                    <select asp-for="IconClass" class="form-select">
                        <option value="bi-linkedin">LinkedIn (bi-linkedin)</option>
                        <option value="bi-github">GitHub (bi-github)</option>
                        <option value="bi-facebook">Facebook (bi-facebook)</option>
                        <option value="bi-instagram">Instagram (bi-instagram)</option>
                        <option value="bi-twitter-x">Twitter/X (bi-twitter-x)</option>
                        <option value="bi-youtube">YouTube (bi-youtube)</option>
                        <option value="bi-globe">Website (bi-globe)</option>
                        <option value="bi-link-45deg">Generic Link (bi-link-45deg)</option>
                    </select>
                    <span asp-validation-for="IconClass" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
