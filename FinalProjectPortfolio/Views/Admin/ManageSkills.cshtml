@model IEnumerable<FinalProjectPortfolio.Models.Skill>

@{
    ViewData["Title"] = "Manage Skills";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="display-6 mb-0">Manage Skills</h1>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
        <a asp-action="CreateSkill" class="btn btn-primary align-self-center">
            <i class="bi bi-plus-circle me-2"></i>Add New Skill
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>Icon</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>
                            <i class="bi @item.IconClass fs-4"></i>
                            <small class="text-muted">(@item.IconClass)</small>
                        </td>
                        <td class="text-end">
                            <a asp-action="EditSkill" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <a asp-action="DeleteSkill" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
