@model FinalProjectPortfolio.Models.Skill

@{
    ViewData["Title"] = "Edit Skill";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6">Edit Skill</h1>
    </div>
    <a asp-action="ManageSkills" class="btn btn-sm btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="EditSkill">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IconClass" class="form-label">Icon</label>
                    <select asp-for="IconClass" class="form-select">
                        <option value="bi-code-slash">Code (bi-code-slash)</option>
                        <option value="bi-filetype-html">HTML (bi-filetype-html)</option>
                        <option value="bi-filetype-css">CSS (bi-filetype-css)</option>
                        <option value="bi-filetype-js">JavaScript (bi-filetype-js)</option>
                        <option value="bi-filetype-sql">SQL (bi-filetype-sql)</option>
                        <option value="bi-database">Database (bi-database)</option>
                        <option value="bi-server">Server (bi-server)</option>
                        <option value="bi-window">Window/App (bi-window)</option>
                        <option value="bi-phone">Mobile (bi-phone)</option>
                        <option value="bi-git">Git (bi-git)</option>
                        <option value="bi-github">GitHub (bi-github)</option>
                        <option value="bi-tools">Tools (bi-tools)</option>
                        <option value="bi-cloud">Cloud (bi-cloud)</option>
                        <option value="bi-terminal">Terminal (bi-terminal)</option>
                    </select>
                    <span asp-validation-for="IconClass" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
